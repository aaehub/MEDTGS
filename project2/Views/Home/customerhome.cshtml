@model IEnumerable<project2.Models.article>


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
</head>
<style>

    .cards {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 30%;
        margin-bottom:15px;
        border-radius: 5px;
        display:inline-block;
        padding-top:30px;
        padding-bottom:30px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    img {
        border-radius: 5px 5px 0 0;
    }

    .card-texts {
        padding: 2px 16px;
    }
</style>
<br />
<br />
<br />
<br />

         <div>

    @foreach (var item in Model)
    {
        <div class="cards" >
            <center>
            <a asp-controller="articles1" asp-action="details" asp-route-id="@item.Id"><img src="~/images/@item.imagefilename" ></a>
                <div class="card-texts"><label><a asp-controller="articles1" asp-action="details" asp-route-id="@item.Id">@item.topic</a></label></div>
            </center>
        </div>
    }
         </div>
        

 



