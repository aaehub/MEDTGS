@model project2.Models.report

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <h4>id</h4>
              
                @Model.Id  <br />
                
                <h4>title</h4>
                
                @Model.title
                <br />
                <h4>content</h4> 
                
                @Model.content
                <br />
                <h4>date</h4>
             
                @Model.date<br />
                <br />
                
                
                
                
                
                <input hidden asp-for="title" class="form-control" />
               
            </div>
            <div class="form-group">
               
                <input hidden asp-for="date" class="form-control" />
               
            </div>
            <div class="form-group">
               
                <input hidden asp-for="content" class="form-control" />
                
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isSolved" /> @Html.DisplayNameFor(model => model.isSolved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
