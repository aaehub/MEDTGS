@model project2.Models.accounts

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-top:20px;"><a asp-action="Index">Back to List</a></div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this account?</h3>
<hr />
<div>
 
    <div class="row">
        <div class="col-25">UserName</div>
        <div class="col-75">@Html.DisplayFor(model => model.username)</div>
    </div>
    <div class="row">
        <div class="col-25">Email</div>
        <div class="col-75">@Html.DisplayFor(model => model.email)</div>
    </div>



    <div class="row">
        <div class="col-25">Gender</div>
        <div class="col-75"> @Html.DisplayFor(model => model.gender)</div>
    </div>

    <div class="row">
        <div class="col-25">Role</div>
        <div class="col-75">@Html.DisplayFor(model => model.role)</div>
    </div>
    <div class="row">
        <div class="col-25">Birth Date</div>
        <div class="col-75">@Html.DisplayFor(model => model.Date)</div>
    </div>
        
    
    <form asp-action="Delete" style="text-align:center;margin-bottom:30px;margin-top:30px;">
        <input type="hidden" asp-for="Id" />
        <div class="row">
           
            <center><input type="submit" value="Delete" class="btn btn-danger" /> </center>
        </div>
        
        
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}