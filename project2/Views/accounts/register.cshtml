@model project2.Models.accounts



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> - MTGS</title>
    <link rel="stylesheet" href="~/css/css.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>

<br />
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body style="background-color: lightgrey; color: white">
    <div style="
        display: grid;
        justify-content: center;

        border-radius: 25px;
        background-color: rgba(26, 26, 26, 0.533);
        margin: 0 30%;
        padding: 5%;
        margin-top:10%;
      ">


    <script>

        @* For more information on enabling MVC for empty projects, visit
            http://go.microsoft.com/fwlink/?LinkID=397860 *@ @{
            Layout = null;


            ViewData["Title"] = "View";
        }

 function VP() {
        var pass1 = document.getElementById("password").value;
        var pass2 = document.getElementById("pass2").value;
        //check empty password field
        if (pass1.value == pass2.value) {    
            if (pass1 == pass2) {
               document.getElementById("rb").disabled = false;
            } else {
                document.getElementById("rb").disabled = true;
                document.getElementById("message").innerHTML = "wrong conformation";

            }
        }
        }


   
</script>

    <div >
        <form asp-action="register">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Registration</h4>
                <div class="form-group">
                <div > <label asp-for="username" class="control-label">UserName</label></div>
                <div >
                    <input asp-for="username" required class="form-control" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
            </div>

                <div class="form-group">
                <div > <label asp-for="email" class="control-label">Email</label></div>
                <div >
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                <div ><label asp-for="password" class="control-label">Password</label></div>
                <div >
                    <input type="password" minlength="8" required asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                <div ><label class="control-label">Password Confirmation</label></div>
                <div >  <input id="pass2" minlength="8" required type="password" onchange="VP()" class="form-control" /></div>
            </div>
                <div class="form-group">
                <div ><label asp-for="gender" class="control-label">Gender</label></div>
                    <div class="form-group">
                    <div class="checkbox">
                        <label> <input type="radio" asp-for="gender" value="male" id="rm" /> Male</label>
                    </div>
                    <div class="checkbox">
                        <label> <input type="radio" asp-for="gender" value="female" id="rf" /> Female</label>
                    </div>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <a asp-action="Index"> Back </a>

                <div class="col-25"></div>
                <div class="col-75"><input type="submit" id="rb" value="Create" class="btn btn-primary" /></div>
            </div>
         
         

            <div class="form-group">
                
            </div>
        </form>
        @ViewData["message"]
    </div>
</div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
