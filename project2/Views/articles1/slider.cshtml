@model IEnumerable<project2.Models.article>

@{
    ViewData["Title"] = "slider";
}

<h1>slider</h1>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<div id="myCarousel" style="width:50% ; min-width:300px " class="carousel slide mx-auto" data-ride="carousel">
    <div class="carousel-inner" id="demo">
        @{
            var counter = 0;
        }
        @foreach (var item in Model)
        {
            <div class='carousel-item   @(counter == 0 ? "active"  : String.Empty)'>
                <center> <img src="~/images/@item.imagefilename" height="220"> </center>
                <div class='carousel-caption mx-auto' style='top:65%; left:15%;'>
                 <a style="text-decoration:none; color:blue; background-color:dimgray; font-size:large;"
                   asp-controller="articles1" asp-action="details" asp-route-id="@item.Id" style='width:100px ' class='mx-auto bg-secondary '>  <br /> @item.topic  </a>

                </div>
            </div>
            counter++;
        }
    </div>
    <a class="carousel-control-prev " href="#myCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon bg-secondary"></span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" data-slide="next">
        <span class="carousel-control-next-icon bg-secondary"></span>
    </a>
</div>